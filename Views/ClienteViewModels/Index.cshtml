@model IEnumerable<CrudBiblioteca.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Apartado de clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-add"></i> Agregar nuevo cliente
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-primary">
                        <i class="bi bi-pen"></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-dark">
                        <i class="bi bi-eye"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">
                        <i class="bi bi-archive"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
