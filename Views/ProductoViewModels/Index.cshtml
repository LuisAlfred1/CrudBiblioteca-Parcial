@model IEnumerable<CrudBiblioteca.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Apartado de productos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-box-seam-fill"></i> Agregar producto
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                Q @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-primary">
                        <i class="bi bi-pen"></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-dark">
                        <i class="bi bi-eye"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-danger">
                        <i class="bi bi-archive"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
